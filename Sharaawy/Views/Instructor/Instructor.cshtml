@model Instructor

<div class="container">
    <div class="row justify-content-center align-items-center">
        <!-- Image Column -->
        <div class="col-md-6 text-center">
            <img src="/images/@Model.Image" alt="Instructor Image"
                 class="img-fluid rounded shadow-lg" style="max-height: 70vh; object-fit: cover;">
        </div>

        <!-- Details Column -->
        <div class="col-md-6 text-center text-md-start p-5">
            <h2 class="display-3 mb-4 text-primary">@Model.Name</h2>
            <h3 class="display-6 mb-5">
                <span class="badge bg-success p-3">
                    Salary: $@Model.Salary
                </span>
            </h3>
        </div>
    </div>
</div>
