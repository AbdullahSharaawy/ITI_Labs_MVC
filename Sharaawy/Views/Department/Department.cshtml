@model Department
@{
	ViewData["Title"] = "Department Details";
}
<div class="container mt-4">
    <div class="card mb-3">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Employee Details</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">ID: <span class="text-primary">@Model.Id</span></h5>
            <h5 class="card-title">Name: <span class="text-success">@Model.Name</span></h5>
            <h5 class="card-title">Manager: <span class="text-info">@Model.Manager</span></h5>
        </div>
   
<div class="container mt-4 pt-5">
        <h3 class="mb-3">Courses</h3>
    <!-- Added pt-5 -->
    <table id="myTable" class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Degree</th>
                <th class="text-center">Minimum Degree</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Course item in @Model.Courses)
            {
                <tr>
                    <td class="align-middle">@item.Id</td>
                    <td class="align-middle">@item.Name</td>
                    <td class="align-middle">@item.Degree</td>
                    <td class="align-middle">@item.MinDegree</td>

                </tr>
            }
        </tbody>
    </table>

</div>


<div class="container mt-4 pt-5">
        <h3 class="mb-3">Instructors</h3>
    <!-- Added pt-5 -->
    <table id="myTable" class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Instructor item in @Model.Instructors)
            {
                <tr>
                    <td class="align-middle">@item.Id</td>
                    <td class="align-middle">@item.Name</td>
                    <td class="text-center">
                        <img src="/images/@item.Image" alt="Instructor Image" class="img-thumbnail rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                    </td>
                </tr>
            }
        </tbody>
    </table>
        </div>
</div>